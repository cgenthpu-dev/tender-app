{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "client/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/server.js"
        },
        {
            "src": "/(.*)\\.(css|js|png|jpg|jpeg|svg|ico|json|woff|woff2|ttf|eot)",
            "dest": "/client/$1.$2"
        },
        {
            "src": "/(.*)",
            "dest": "/client/index.html"
        }
    ]
}